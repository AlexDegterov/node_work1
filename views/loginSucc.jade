extends layout
block styles
  link(rel='stylesheet', href='/stylesheets/style_auth.css')
  
block content
  #login
    .flip
      .form-login
        h1 Авторизация
        fieldset
          .err #{err}
          form(action='/auth/login', method='post')
            input(name='email', type='email', placeholder='Логин или Email', required='')
            input(name='password', type='password', placeholder='Пароль', required='')
            input(type='submit', value='ВОЙТИ')
          a.flipper(href='/auth/register') Хотите зарегистрироваться? Регистрация.
        



    
